<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".DetailsLightActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/naam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="-100dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Naam"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/naam"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="112dp"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="112dp"
                android:layout_marginRight="112dp"
                app:srcCompat="@drawable/cocktail" />

            <TextView
                android:id="@+id/sterkten"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="97dp"
                android:layout_toStartOf="@+id/sterkte"
                android:layout_toLeftOf="@+id/sterkte"
                android:text="Strength:"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/sterkte"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text="Strength %"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ingredienten"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sterkten"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="0dp"
                android:text="Ingredients:"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ingredient"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sterkte"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="-5dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@+id/ingredienten"
                android:layout_toRightOf="@+id/ingredienten"
                android:text="No Ingredients"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/benodigheid"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="46dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="0dp"
                android:text="Equipments:"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/benodigheden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredient"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@+id/benodigheid"
                android:layout_toRightOf="@+id/benodigheid"
                android:text="No Equipments"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/instructie"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benodigheden"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/instructies"
                android:layout_toLeftOf="@+id/instructies"
                android:text="Instructions:"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/instructies"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benodigheden"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:text="No Instructions"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:layout_marginBottom="30dp"/>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>


